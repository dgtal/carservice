{% extends "layout.html.twig" %}

{% block body %}
<div class="page-header">
    <h1>Clientes</h1>
</div>

<table class="records_list table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Tel√©fono</th>
            <th>Creado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('customer_show', { 'clientId': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.firstname }} {{ entity.lastname }}</td>
            <td>{{ entity.phonenumber }}</td>
            <td>{% if entity.created %}{{ entity.created|date('d-m-Y') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('customer_show', { 'clientId': entity.id }) }}">ver</a>
                    </li>
                    <li>
                        <a href="{{ path('customer_edit', { 'clientId': entity.id }) }}">editar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="pagination pagination-centered">
  <ul>
    <li class="disabled"><a href="#">&laquo;</a></li>
    <li class="active"><a href="#">1</a></li>
  </ul>
</div>

<a href="{{ path('customer_new') }}" class="btn btn-primary ">Crear nuevo cliente</a>
{% endblock %}